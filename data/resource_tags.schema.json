{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "color": {
        "type": "string",
        "enum": [
          "green",
          "lavender",
          "orange",
          "purple",
          "red",
          "teal",
          "yellow"
        ],
        "description": "please choose a color listed in `resources.ts`"
      }
    },
    "required": ["name"],
    "additionalProperties": false
  }
}
